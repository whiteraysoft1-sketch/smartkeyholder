<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # If the request is to /public, just serve it directly
    RewriteCond %{REQUEST_URI} ^/public/ [NC]
    RewriteRule ^public/(.*)$ public/$1 [L]

    # If the request is not to an existing file or directory
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirect to public/index.php (internal rewrite, not visible to user)
    RewriteRule ^(.*)$ public/index.php [L]
</IfModule>