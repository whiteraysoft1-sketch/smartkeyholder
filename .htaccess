<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # For Hostinger: Serve files directly if they exist
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Rewrite all requests to public/index.php
    RewriteRule ^(.*)$ public/index.php?path=$1 [QSA,L]
</IfModule>