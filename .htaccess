<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Don't process if it's a real file or directory
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # For requests not going to /public, prepend /public
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ /public/$1 [L]
</IfModule>